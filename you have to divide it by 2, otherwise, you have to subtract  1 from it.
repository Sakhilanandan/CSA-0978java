import java.util.Scanner;

class Steps {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int num = scanner.nextInt();
        int step = 0;

        while (num != 0) {
            if (num % 2 == 0) {
                num = num / 2;
                step++;
            } else {
                num -= 1;
                step++;
            }
        }

        System.out.println("Steps = " + step);
        scanner.close();
    }
}
17
